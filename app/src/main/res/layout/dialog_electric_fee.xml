<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@drawable/login_edit_back"
        android:layout_height="48dp">
        <TextView
            android:text="楼栋号:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.AppCompatSpinner
            android:gravity="center"
            android:background="@null"
            android:padding="4dp"
            android:id="@+id/build_num"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:entries="@array/buildnum"
            android:spinnerMode="dropdown"
            android:layout_height="match_parent">
        </android.support.v7.widget.AppCompatSpinner>
    </LinearLayout>


    <EditText
        android:gravity="center"
        android:padding="2dp"
        android:background="@drawable/login_edit_back"
        android:textSize="14sp"
        android:inputType="number"
        android:id="@+id/room_num"
        android:hint="请输入房间号"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <EditText
        android:gravity="center"
        android:padding="2dp"
        android:background="@drawable/login_edit_back"
        android:textSize="14sp"
        android:inputType="number"
        android:id="@+id/balance"
        android:hint="请输入转账金额"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <EditText
        android:gravity="center"
        android:padding="2dp"
        android:background="@drawable/login_edit_back"
        android:textSize="14sp"
        android:inputType="numberPassword"
        android:id="@+id/pwd"
        android:maxLength="6"
        android:hint="请输入查询密码"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <TextView
        android:id="@+id/err_msg"
        android:text="错误信息"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/colorAccent"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:padding="8dp"
        android:background="@drawable/login_edit_back"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:text="@string/electric_op_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="缴费"
        android:theme="@style/ConfirmBtn"
        android:textColor="@color/white"
        android:id="@+id/confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>