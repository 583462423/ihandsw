<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qxg.ihandsw.view.Card.Impl.CardActivity">
    <LinearLayout
        android:id="@+id/toolbar_layout"
        android:orientation="vertical"
        android:transitionName="card1"
        android:background="@color/card3"
        android:paddingTop="28dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            app:titleTextColor="@color/black"
            android:layout_height="?attr/actionBarSize">
        </android.support.v7.widget.Toolbar>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:background="#f7f7f7"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <LinearLayout
                    android:id="@+id/school_date"
                    android:background="?android:attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">
                    <ImageView
                        android:padding="14dp"
                        android:src="@drawable/school_date"
                        android:tint="@color/color2"
                        android:layout_width="56dp"
                        android:layout_height="56dp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp">
                        <TextView
                            android:textColor="@color/text_color"
                            android:textSize="15sp"
                            android:text="学期校历"
                            android:gravity="center_vertical"
                            android:layout_centerInParent="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <View
                            android:layout_alignParentBottom="true"
                            android:background="#ccc"
                            android:layout_marginRight="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/work_arrange"
                    android:background="?android:attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">
                    <ImageView
                        android:padding="14dp"
                        android:src="@drawable/work_time"
                        android:tint="@color/color3"
                        android:layout_width="56dp"
                        android:layout_height="56dp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp">
                        <TextView
                            android:textColor="@color/text_color"
                            android:textSize="15sp"
                            android:text="工作安排"
                            android:gravity="center_vertical"
                            android:layout_centerInParent="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <View
                            android:clickable="false"
                            android:layout_alignParentBottom="true"
                            android:background="#ccc"
                            android:layout_marginRight="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/master_email"
                    android:background="?android:attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">
                    <ImageView
                        android:clickable="false"
                        android:background="@null"
                        android:padding="14dp"
                        android:src="@drawable/email"
                        android:tint="@color/color6"
                        android:layout_width="56dp"
                        android:layout_height="56dp" />
                    <RelativeLayout
                        android:clickable="false"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="56dp">
                        <TextView
                            android:clickable="false"
                            android:background="@null"
                            android:textColor="@color/text_color"
                            android:textSize="15sp"
                            android:text="校长信箱"
                            android:gravity="center_vertical"
                            android:layout_centerInParent="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <View
                            android:clickable="false"
                            android:layout_alignParentBottom="true"
                            android:background="#ccc"
                            android:layout_marginRight="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hire_info"
                    android:background="?android:attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">
                    <ImageView
                        android:padding="14dp"
                        android:src="@drawable/zhaopin"
                        android:tint="@color/color7"
                        android:layout_width="56dp"
                        android:layout_height="56dp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp">
                        <TextView
                            android:textColor="@color/text_color"
                            android:textSize="15sp"
                            android:text="招聘信息"
                            android:gravity="center_vertical"
                            android:layout_centerInParent="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <View
                            android:clickable="false"
                            android:layout_alignParentBottom="true"
                            android:background="#ccc"
                            android:layout_marginRight="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/jiaowu"
                    android:background="?android:attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">
                    <ImageView
                        android:padding="14dp"
                        android:src="@drawable/yilan"
                        android:tint="@color/color1"
                        android:layout_width="56dp"
                        android:layout_height="56dp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp">
                        <TextView
                            android:textColor="@color/text_color"
                            android:textSize="15sp"
                            android:text="通知一览"
                            android:gravity="center_vertical"
                            android:layout_centerInParent="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <View
                            android:layout_alignParentBottom="true"
                            android:background="#ccc"
                            android:layout_width="match_parent"
                            android:layout_marginRight="8dp"
                            android:layout_height="0.2dp"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/phone_table"
                    android:background="?android:attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">
                    <ImageView
                        android:clickable="false"
                        android:background="@null"
                        android:padding="14dp"
                        android:src="@drawable/phone_table"
                        android:tint="@color/color5"
                        android:layout_width="56dp"
                        android:layout_height="56dp" />
                    <RelativeLayout
                        android:clickable="false"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="56dp">
                        <TextView
                            android:clickable="false"
                            android:background="@null"
                            android:textColor="@color/text_color"
                            android:textSize="15sp"
                            android:text="办公电话号码表"
                            android:gravity="center_vertical"
                            android:layout_centerInParent="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <View
                            android:clickable="false"
                            android:layout_alignParentBottom="true"
                            android:background="#ccc"
                            android:layout_marginRight="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/time_table"
                    android:background="?android:attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">
                    <ImageView
                        android:clickable="false"
                        android:background="@null"
                        android:padding="14dp"
                        android:src="@drawable/time_table"
                        android:tint="@color/color4"
                        android:layout_width="56dp"
                        android:layout_height="56dp" />
                    <RelativeLayout
                        android:clickable="false"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="56dp">
                        <TextView
                            android:clickable="false"
                            android:background="@null"
                            android:textColor="@color/text_color"
                            android:textSize="15sp"
                            android:text="学生事务综合服务时间表"
                            android:gravity="center_vertical"
                            android:layout_centerInParent="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
