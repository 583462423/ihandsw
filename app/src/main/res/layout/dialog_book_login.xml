<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@drawable/login_back"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <TextView
            android:id="@+id/notice"
            android:gravity="center"
            android:textColor="@color/ccc"
            android:textSize="16sp"
            android:text="请登录"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <EditText
        android:id="@+id/pwd"
        android:hint="请输入图书系统密码，初始为学号"
        android:textSize="14sp"
        android:gravity="center"
        android:inputType="textPassword"
        android:padding="8dp"
        android:background="@drawable/square_edit_back"
        android:layout_width="match_parent"
        android:layout_height="56dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <RelativeLayout
            android:layout_width="78dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/checkImg"
                android:scaleType="fitXY"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ProgressBar
                android:id="@+id/load_check"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/check"
                android:hint="请输入验证码"
                android:textSize="14sp"
                android:gravity="center"
                android:maxLength="4"
                android:inputType="number"
                android:padding="8dp"
                android:background="@drawable/square_edit_back"
                android:layout_width="match_parent"
                android:layout_height="56dp" />
        </LinearLayout>
    </LinearLayout>




    <RelativeLayout
        android:id="@+id/login2check"
        android:theme="@style/LoginClick"
        android:background="@drawable/login_back"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ProgressBar
            android:visibility="gone"
            android:id="@+id/check_progress"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/check_msg"
            android:textSize="14sp"
            android:text="验证"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </RelativeLayout>

</LinearLayout>