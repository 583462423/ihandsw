<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/card_state"
        android:text="卡状态"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="36dp" />

    <EditText
        android:gravity="center"
        android:padding="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/pwd_edit"
        android:background="@drawable/login_edit_back"
        android:inputType="textPassword"
        android:hint="请使用下方键盘输入查询密码"
        android:textSize="14sp"
        android:clickable="false"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <RelativeLayout
        android:layout_marginBottom="8dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ProgressBar
            android:id="@+id/load_pwd_table_progress"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:visibility="gone"
            android:orientation="vertical"
            android:id="@+id/load_pwd_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_pwd_table_width">
                    <ImageView
                        android:padding="@dimen/card_pwd_table_btn_padding"
                        android:id="@+id/img0"
                        android:background="@drawable/circle_pwd_table_back"
                        android:layout_width="@dimen/card_pwd_table_width"
                        android:layout_centerInParent="true"
                        android:layout_height="@dimen/card_pwd_table_width" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_pwd_table_width">
                    <ImageView
                        android:padding="@dimen/card_pwd_table_btn_padding"
                        android:id="@+id/img1"
                        android:background="@drawable/circle_pwd_table_back"
                        android:layout_width="@dimen/card_pwd_table_width"
                        android:layout_centerInParent="true"
                        android:layout_height="@dimen/card_pwd_table_width" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_pwd_table_width">
                    <ImageView
                        android:padding="@dimen/card_pwd_table_btn_padding"
                        android:id="@+id/img2"
                        android:background="@drawable/circle_pwd_table_back"
                        android:layout_width="@dimen/card_pwd_table_width"
                        android:layout_centerInParent="true"
                        android:layout_height="@dimen/card_pwd_table_width" />
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_pwd_table_width">
                    <ImageView
                        android:padding="@dimen/card_pwd_table_btn_padding"
                        android:id="@+id/img3"
                        android:background="@drawable/circle_pwd_table_back"
                        android:layout_width="@dimen/card_pwd_table_width"
                        android:layout_centerInParent="true"
                        android:layout_height="@dimen/card_pwd_table_width" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_pwd_table_width">
                    <ImageView
                        android:id="@+id/img4"
                        android:padding="@dimen/card_pwd_table_btn_padding"
                        android:background="@drawable/circle_pwd_table_back"
                        android:layout_width="@dimen/card_pwd_table_width"
                        android:layout_centerInParent="true"
                        android:layout_height="@dimen/card_pwd_table_width" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_pwd_table_width">
                    <ImageView
                        android:id="@+id/img5"
                        android:padding="@dimen/card_pwd_table_btn_padding"
                        android:background="@drawable/circle_pwd_table_back"
                        android:layout_width="@dimen/card_pwd_table_width"
                        android:layout_centerInParent="true"
                        android:layout_height="@dimen/card_pwd_table_width" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_pwd_table_width">
                    <ImageView
                        android:padding="@dimen/card_pwd_table_btn_padding"
                        android:id="@+id/img6"
                        android:background="@drawable/circle_pwd_table_back"
                        android:layout_width="@dimen/card_pwd_table_width"
                        android:layout_centerInParent="true"
                        android:layout_height="@dimen/card_pwd_table_width" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_pwd_table_width">
                    <ImageView
                        android:padding="@dimen/card_pwd_table_btn_padding"
                        android:id="@+id/img7"
                        android:background="@drawable/circle_pwd_table_back"
                        android:layout_width="@dimen/card_pwd_table_width"
                        android:layout_centerInParent="true"
                        android:layout_height="@dimen/card_pwd_table_width" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_pwd_table_width">
                    <ImageView
                        android:padding="@dimen/card_pwd_table_btn_padding"
                        android:id="@+id/img8"
                        android:background="@drawable/circle_pwd_table_back"
                        android:layout_width="@dimen/card_pwd_table_width"
                        android:layout_centerInParent="true"
                        android:layout_height="@dimen/card_pwd_table_width" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_pwd_table_width">
                    <ImageView
                        android:padding="@dimen/card_pwd_table_btn_padding"
                        android:src="@drawable/quit"
                        android:id="@+id/img_quit"
                        android:background="@drawable/circle_pwd_table_back"
                        android:layout_width="@dimen/card_pwd_table_width"
                        android:layout_centerInParent="true"
                        android:layout_height="@dimen/card_pwd_table_width" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_pwd_table_width">
                    <ImageView
                        android:padding="@dimen/card_pwd_table_btn_padding"
                        android:id="@+id/img9"
                        android:background="@drawable/circle_pwd_table_back"
                        android:layout_width="@dimen/card_pwd_table_width"
                        android:layout_centerInParent="true"
                        android:layout_height="@dimen/card_pwd_table_width" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_pwd_table_width">
                    <ImageView
                        android:padding="@dimen/card_pwd_table_btn_padding"
                        android:id="@+id/img_back"
                        android:src="@drawable/back"
                        android:background="@drawable/circle_pwd_table_back"
                        android:layout_width="@dimen/card_pwd_table_width"
                        android:layout_centerInParent="true"
                        android:layout_height="@dimen/card_pwd_table_width" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/err_msg"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:visibility="gone"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <Button
            android:id="@+id/jiegua"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="解挂"
            android:theme="@style/ConfirmBtn"
            android:textColor="@color/white"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/guashi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="挂失"
            android:theme="@style/ConfirmBtn"
            android:textColor="@color/white"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>